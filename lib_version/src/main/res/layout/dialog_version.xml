<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_rect_btn_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/version_dialog_head_bk" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_version_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="更新"
                android:textColor="@color/cc_text_blank" />

            <TextView
                android:id="@+id/text_version_size"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape_oval_version"
                android:gravity="center"
                android:text="13.2M"
                android:textColor="@color/cc_white" />

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/text_version_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:lineSpacingExtra="10dp"
        android:maxLines="9"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbarThumbVertical="@drawable/none"
        android:text="1：更新城市\n2：修复部分bug\n3：更新界面"
        android:textColor="@color/cc_text_blank" />

    <CheckBox
        android:id="@+id/check_ignore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="忽略此版本"
        android:textColor="@color/cc_text_dark"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cc_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="15dp"
            android:text="我再想想"
            android:textColor="@color/cc_text_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:text="立刻更新"
            android:textColor="@color/cc_orage" />
    </LinearLayout>

</LinearLayout>