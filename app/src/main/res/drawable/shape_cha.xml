<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- outer circle -->
    <item>
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/st_red_login" />
                <size
                    android:width="100dp"
                    android:height="10dp" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/st_red_login" />
                <size
                    android:width="100dp"
                    android:height="10dp" />
            </shape>
        </rotate>
    </item>

</layer-list>