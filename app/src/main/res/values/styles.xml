<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--全屏-->
    <style name="AppTheme.NoTitleFullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
    </style>

    <style name="RadioHomeTab">
        <item name="android:textColor">@color/select_home_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TextMeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_nomal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_next_dark</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/com_text_blank</item>
        <item name="android:textColorHint">@color/com_text_dark_light</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="EditLineItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/text_nomal_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/com_text_blank</item>
        <item name="android:textColorHint">@color/com_text_dark_light</item>
        <item name="android:background">@drawable/shape_rect_corner_none_line_dark</item>
    </style>

    <style name="EditMeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_nomal_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/com_text_blank</item>
        <item name="android:textColorHint">@color/com_text_dark_light</item>
        <item name="android:background">@color/none</item>
    </style>

    <style name="EditLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">@dimen/text_nomal</item>
        <item name="android:background">@drawable/shape_rect_cornerfull_none_line_red</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/st_red_login</item>
        <item name="android:textColorHint">@color/st_red_login_hint</item>
    </style>

    <!--tablayout字体大小只能通过style来设置-->
    <style name="TabLayoutTextBig">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TabLayoutTextBigNomal">
        <item name="android:textSize">@dimen/text_big_nomal</item>
    </style>

    <style name="TextAppearance.Tag" parent="android:TextAppearance">
        <item name="fontPath">fonts/brlnsb.ttf</item>
    </style>
</resources>
