<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/st_bk">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="20dp"
            android:background="@color/none"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/btn_right_msg"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/ic_tab_home" />

            <ImageView
                android:id="@+id/btn_right_setting"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/ic_tab_home" />

        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/showingroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:id="@+id/lay_me_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_me_header"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/default_header" />

                        <TextView
                            android:id="@+id/text_me_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="登录/注册"
                            android:textColor="@color/com_text_dark_light"
                            android:textSize="@dimen/text_nomal" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_me_order_unpay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:drawableTop="@drawable/ic_tab_home"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="20dp"
                        android:text="待付款"
                        android:textColor="@color/com_text_dark_light"
                        android:textSize="@dimen/text_tiny" />


                    <TextView
                        android:id="@+id/text_me_order_unin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:drawableTop="@drawable/ic_tab_home"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="20dp"
                        android:text="待收货"
                        android:textColor="@color/com_text_dark_light"
                        android:textSize="@dimen/text_tiny" />


                    <TextView
                        android:id="@+id/text_me_order_uneva"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:drawableTop="@drawable/ic_tab_home"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="20dp"
                        android:text="待评价"
                        android:textColor="@color/com_text_dark_light"
                        android:textSize="@dimen/text_tiny" />

                    <View
                        style="@style/Line_V"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="20dp" />


                    <TextView
                        android:id="@+id/text_me_order_all"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:drawableTop="@drawable/ic_tab_home"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="20dp"
                        android:text="我的订单"
                        android:textColor="@color/com_text_dark_light"
                        android:textSize="@dimen/text_tiny" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_me_integral"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textColor="@color/com_text_dark"
                            android:textSize="@dimen/text_subig" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="我的积分"
                            android:textColor="@color/com_text_dark_light"
                            android:textSize="@dimen/text_tiny" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_me_coupon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/com_text_dark"
                            android:textSize="@dimen/text_subig" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="我的优惠券"
                            android:textColor="@color/com_text_dark_light"
                            android:textSize="@dimen/text_tiny" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_me_favo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/com_text_dark"
                            android:textSize="@dimen/text_subig" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="我的收藏"
                            android:textColor="@color/com_text_dark_light"
                            android:textSize="@dimen/text_tiny" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_me_sign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/com_text_dark"
                            android:textSize="@dimen/text_subig" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="我的签到"
                            android:textColor="@color/com_text_dark_light"
                            android:textSize="@dimen/text_tiny" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_me_history"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/com_text_dark"
                            android:textSize="@dimen/text_subig" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="浏览记录"
                            android:textColor="@color/com_text_dark_light"
                            android:textSize="@dimen/text_tiny" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/st_bk"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#09000000"
                        android:gravity="center"
                        android:text="为您推荐"
                        android:textColor="@color/com_text_dark"
                        android:textSize="@dimen/text_nomal" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_recomment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="10dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>