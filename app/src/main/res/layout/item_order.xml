<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_me_next"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text="已取消"
            android:textColor="@color/com_text_dark"
            android:textSize="@dimen/text_tiny" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:clipToPadding="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/st_bk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_small"
                tools:text="共1件商品 实付款" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_big"
                tools:text="￥449.00" />

        </LinearLayout>

        <View style="@style/Line_H" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingRight="25dp"
            android:paddingTop="7dp">

            <TextView
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_rect_none_line_dark"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="晒单评价"
                android:textColor="@color/com_text_dark_light"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_rect_none_line_red"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="再次购买"
                android:textColor="@color/st_red"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/btn_pay"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_rect_none_line_red"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="去支付"
                android:textColor="@color/st_red"
                android:textSize="@dimen/text_nomal_small" />

        </LinearLayout>

    </LinearLayout>
</layout>