<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/none"
        android:paddingTop="20dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RadioGroup
            android:id="@+id/radiogroup_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_product"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/select_text_dark_red_check"
                android:textSize="@dimen/text_big_nomal" />

            <RadioButton
                android:id="@+id/radio_recommend"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/select_text_dark_red_check"
                android:textSize="@dimen/text_big" />

        </RadioGroup>

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/com_text_dark"
            android:textSize="@dimen/text_big_nomal" />
    </android.support.v7.widget.Toolbar>

</layout>