<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_share_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/btn_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_share_wx"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/btn_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_share_sinaweibo"
                android:gravity="center"
                android:text="新浪微博"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

        </LinearLayout>

    </LinearLayout>
</layout>