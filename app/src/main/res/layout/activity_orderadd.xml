<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/st_bk"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.SuggestActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:id="@+id/text_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="订单确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_big" />

            </android.support.v7.widget.Toolbar>

            <View style="@style/Line_H" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@color/white">

                        <FrameLayout
                            android:id="@+id/lay_address_add"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            tools:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/ic_add"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:text="新增地址"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_big" />

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/lay_address_select"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_address_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="31dp"
                                    android:textColor="@color/com_text_blank"
                                    android:textSize="@dimen/text_big_nomal"
                                    tools:text="Marie 186****1547" />

                                <TextView
                                    android:id="@+id/text_address_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginTop="7dp"
                                    android:drawableLeft="@drawable/ic_address_position"
                                    android:drawablePadding="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:lineSpacingExtra="2dp"
                                    android:maxLines="1"
                                    android:textColor="@color/com_text_blank"
                                    android:textSize="@dimen/text_small"
                                    tools:text="四川省成都市高新西区环球中心W3区1320室，地址太长啦，一行都放不下了，地址太长啦，一行都放不下了，地址太长啦，一行都放不下了，地址太长啦，一行都放不下了，地址太长啦，一行都放不下了" />


                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_me_next" />

                        </FrameLayout>

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.ins.common.view.bundleimgview.BundleImgView
                                android:id="@+id/bundleview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:minHeight="50dp"
                                app:editble="false" />

                            <TextView
                                android:id="@+id/text_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawablePadding="8dp"
                                android:drawableRight="@drawable/ic_next_dark"
                                android:gravity="center"
                                android:paddingRight="15dp"
                                android:text="总计:2"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_nomal_small" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/lay_bundle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_me_sign"
                            style="@style/TextMeItem"
                            android:layout_height="45dp"
                            android:text="优惠券"
                            android:textColor="@color/com_text_blank" />

                        <View
                            style="@style/Line_H"
                            android:layout_marginLeft="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="积分"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_nomal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="公有20分，可用20分，抵￥0.20元"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_tiny" />

                            <Space style="@style/Space_H" />

                            <com.kyleduo.switchbutton.SwitchButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:kswBackColor="@color/select_text_dark_green_check"
                                app:kswThumbColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品结算"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_nomal" />

                        </LinearLayout>

                        <View
                            style="@style/Line_H"
                            android:layout_marginLeft="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品总价"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_nomal" />

                            <Space style="@style/Space_H" />

                            <TextView
                                android:id="@+id/text_total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥453.00"
                                android:textColor="@color/st_red"
                                android:textSize="@dimen/text_nomal" />

                        </LinearLayout>

                        <View
                            style="@style/Line_H"
                            android:layout_marginLeft="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="运费"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_nomal" />

                            <Space style="@style/Space_H" />

                            <TextView
                                android:id="@+id/text_trans_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥0.00"
                                android:textColor="@color/st_red"
                                android:textSize="@dimen/text_nomal" />

                        </LinearLayout>

                        <View
                            style="@style/Line_H"
                            android:layout_marginLeft="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="积分抵扣"
                                android:textColor="@color/com_text_blank"
                                android:textSize="@dimen/text_nomal" />

                            <Space style="@style/Space_H" />

                            <TextView
                                android:id="@+id/text_grade_deprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥-0.20"
                                android:textColor="@color/st_red"
                                android:textSize="@dimen/text_nomal" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_rect_gradient_while_dark"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="应付：￥453.0"
                        android:textColor="@color/st_red"
                        android:textSize="@dimen/text_nomal_small" />

                    <TextView
                        android:id="@+id/btn_go"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/st_red"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="提交订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_nomal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>