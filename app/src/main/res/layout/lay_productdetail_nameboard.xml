<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.ins.common.view.BannerView2
            android:id="@+id/banner"
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:autoscroll="false"
            app:is_square="by_width"
            app:selected_color="@color/colorAccent"
            app:unselected_color="#11000000"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_big_nomal"
                tools:text="Aesop/伊索 香芹籽抗氧化精华100ml 舒缓补水保湿精华" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/st_red"
                    android:textSize="@dimen/text_big"
                    tools:text="￥369.00" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>