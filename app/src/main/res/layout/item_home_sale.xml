<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="7dp">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@color/st_default_bk" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="产品名称"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/text_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="2dp"
            android:text="产品|功效|功能"
            android:textColor="@color/com_text_dark_light"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:text="￥ 49"
            android:textColor="@color/st_purple_xgate"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/text_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="￥ 69"
            android:textColor="@color/com_text_light"
            android:textSize="9sp" />

    </LinearLayout>
</layout>